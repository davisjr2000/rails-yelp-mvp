  }
  function change4(){
    roberto1.setAttribute('style','filter: sepia(100%);');
    roberto2.setAttribute('style','filter: sepia(100%);');
    roberto3.setAttribute('style','filter: sepia(100%);');
    roberto4.setAttribute('style','filter: sepia(100%);');
    roberto5.setAttribute('style','filter: none;');
    robertorating.value = 4
  }
  function change5(){
    roberto1.setAttribute('style','filter: sepia(100%);');
    roberto2.setAttribute('style','filter: sepia(100%);');
    roberto3.setAttribute('style','filter: sepia(100%);');
    roberto4.setAttribute('style','filter: sepia(100%);');
    roberto5.setAttribute('style','filter: sepia(100%);');
    robertorating.value = 1
  }
</script>
